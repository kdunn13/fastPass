<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.fastpass.MainActivity">

    <Button
        android:text="Recieve a file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addFormButton"
        android:layout_marginStart="12dp"
        android:id="@+id/recieveFile" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/formList"
        android:layout_below="@+id/recieveFile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp" />

    <TextView
        android:text="Testtttttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/formList"
        android:layout_alignStart="@+id/addFormButton"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="26dp"
        android:id="@+id/textView" />

    <Button
        android:text="Add a form!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addFormButton"
        android:layout_marginStart="80dp"
        android:layout_below="@+id/recieveFile"
        android:layout_alignParentStart="true" />
</RelativeLayout>
